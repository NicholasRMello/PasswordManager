# Arquivo de exemplo para variáveis de ambiente no Railway
# Copie estas variáveis para o painel do Railway
# IMPORTANTE: Gere uma nova APP_KEY com: php artisan key:generate --show

APP_NAME="Password Manager"
APP_ENV=production
APP_KEY=base64:GERE_UMA_NOVA_CHAVE_COM_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://seu-app.up.railway.app

# Banco de dados MySQL (Railway)
DB_CONNECTION=mysql
DB_HOST=${{MYSQL_HOST}}
DB_PORT=${{MYSQL_PORT}}
DB_DATABASE=${{MYSQL_DATABASE}}
DB_USERNAME=${{MYSQL_USER}}
DB_PASSWORD=${{MYSQL_PASSWORD}}

# Cache e sessões
SESSION_DRIVER=database
CACHE_DRIVER=database
QUEUE_CONNECTION=database

# Controle de migrations (defina como 'true' após configurar o banco)
RUN_MIGRATIONS=false

# Mail (opcional)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"